@model DTO.EmployeeShift
@using Portal.Helper;
@using (Html.BeginForm("Save", "EmployeeShift", FormMethod.Post))
{
    <div class="ibox-content">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-11">
                    @Html.Adaa_HiddenFor(e=>e.ID)
                    @Html.Adaa_HiddenFor(e=>e.CreationDate)
                    @Html.Adaa_HiddenFor(e=>e.CreationUserID)
                    @Html.Adaa_HiddenFor(e=>e.IsDeleted)
                    @Html.Adaa_HiddenFor(e=>e.ModifyDate)

                    <span class="help-block m-b-none"></span>
                </div>

            </div>
        </div>

        <div class="form-group">
            <div class="row">

                <div>
                    <span class="col-sm-2 sm-offset-1"><label class="control-label">Employee :</label></span>
                    <span class="col-sm-3">
                        @Html.DropDownListFor(e =>e.EmployeeID, ViewBag.AllEmployee as SelectList,"Choose Empolyee" , new { @class="form-control"})
                    </span>
                </div>

                <div>
                    <span class="col-sm-2 sm-offset-1"><label class="control-label">ShiftType  :</label></span>
                    <span class="col-sm-3">
                        @Html.DropDownListFor(e =>e.ShiftTypeID, ViewBag.AllShiftType as SelectList,"Choose Empolyee" , new { @class="form-control"})
                    </span>
                </div>

            </div>
        </div>
        <div class="form-group">
            <div class="row">

                <div>
                    <span class="col-sm-2 sm-offset-1"><label class="control-label">From Date :</label></span>
                    <span class="col-sm-3">
                        @Html.TextBoxFor(e =>e.FromDate, new { @class="form-control" , @type ="Date"})
                    </span>
                </div>

                <div>
                    <span class="col-sm-2 sm-offset-1"><label class="control-label">To Date :</label></span>
                    <span class="col-sm-3">
                        @Html.TextBoxFor(e =>e.ToDate, new { @class="form-control", @type ="Date"})
                    </span>
                </div>

            </div>
        </div>
        <div class="form-group">
            <div class="row">

                <div class="col-sm-12 col-sm-offset-9  col-md-12 col-md-offset-8  col-lg-4 col-lg-offset-5">
                    <span>
                        <a href="@Url.Action("Index","EmployeeShift")" class="btn btn-warning" title="اغلاق">
                            <i class="fa fa-close"></i>
                            &ensp; Close
                        </a>
                    </span>
                    <span>
                        <button class="btn btn-primary" type="submit" title="حفظ">
                            <i class="fa fa-save"></i>
                            &ensp; Save
                        </button>
                    </span>
                </div>
                <br />
            </div>
        </div>
    </div>
}