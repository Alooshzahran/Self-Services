@model IEnumerable<DTO.BankBranch>
@{
    List<DTO.Bank> banks = ViewBag.Banks;
}
<style>
    .header {
        background-color: #293846;
        color: #fff;
        padding: 20px 0;
        text-align: center;
    }

        .header h2 {
            margin: 0;
            font-size: 36px;
        }
</style>
<div class="container">
    <div class="header">
        <h2 style="">BankBranches</h2>
    </div>

    <div style="">
        <a class="btn btn-success" href="@Url.Action("AddEdit","BankBranch",new{ID=0})">
            <span class="fa fa-plus">&nbsp;&nbsp;Add</span>
        </a>
    </div>
    <table class="table table-striped table-bordered table-hover dataTables-example">

        <thead>
            <tr>
                <th style="text-align:center">ID</th>
                <th style="text-align:center">Name</th>
                <th style="text-align:center">Arabic Name</th>
                <th style="text-align:center">BankName</th>
                <th style="text-align:center" class="class=" col-sm-4 col-sm-offset-1 col-md-6 col-md-offset-1 col-lg-2 col-lg-offset-1"> <span>Actions</span></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var BankBranch in Model)
            {

                <tr id="tr_@BankBranch.ID" class="gradeX">
                    <td style="text-align:center">@Html.DisplayFor(e=>BankBranch.ID)</td>
                    <td style="text-align:center">
                        @Html.DisplayFor(e=>BankBranch.BranchName)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(e=>BankBranch.BranchNameAR)
                    </td>
                     <td style="text-align:center">
                        @banks.FirstOrDefault(e=>e.ID == BankBranch.BankID).BankName
                    </td>
                    <td style="text-align:center">
                        <a href="@Url.Action("AddEdit","BankBranch",new{id=@BankBranch.ID})" class="btn btn-warning btn-circle  btn-outline"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger btn-circle  btn-outline" onclick="javascript:Delete('@Url.Action("Delete","BankBranch")',@BankBranch.ID)"> <i class="fa fa-trash"></i></a>
                    </td>

                </tr>





            }
        </tbody>

    </table>
    <div class="form-group">
        <div class="row">
        </div>
    </div>
    <div class="form-group">
        <div class="row">
        </div>
    </div>
</div>