@model IEnumerable<DTO.EmployeeDependent>
@{
    List<DTO.Employee> emps = ViewBag.emps;
    List<DTO.Relationship> relations = ViewBag.relations;
}
<style>
    .header {
        background-color: #293846;
        color: #fff;
        padding: 20px 0;
        text-align: center;
    }

        .header h2 {
            margin: 0;
            font-size: 36px;
        }
</style>
<div class="container">
    <div class="header">
        <h2 style="">EmployeeDependentes</h2>
    </div>

    <div style="">
        <a class="btn btn-success" href="@Url.Action("AddEdit","EmployeeDependent",new{ID=0})">
            <span class="fa fa-plus">&nbsp;&nbsp;Add</span>
        </a>
    </div>
    <table class="table table-striped table-bordered table-hover dataTables-example">

        <thead>
            <tr>
                <th style="text-align:center">ID</th>
                <th style="text-align:center">Name</th>
                <th style="text-align:center">Arabic Name</th>
                <th style="text-align:center">BirthDate</th>
                <th style="text-align:center">Relationship</th>
                <th style="text-align:center">Employee</th>
                <th style="text-align:center" class="class=" col-sm-4 col-sm-offset-1 col-md-6 col-md-offset-1 col-lg-2 col-lg-offset-1"> <span>Actions</span></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var EmployeeDependent in Model)
            {

                <tr id="tr_@EmployeeDependent.ID" class="gradeX">
                    <td style="text-align:center">@Html.DisplayFor(e=>EmployeeDependent.ID)</td>
                    <td style="text-align:center">
                        @Html.DisplayFor(e=>EmployeeDependent.Name)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(e=>EmployeeDependent.NameAR)
                    </td> 
                    <td style="text-align:center">
                        @Html.DisplayFor(e=>EmployeeDependent.BirthDate)
                    </td> 
                    <td style="text-align:center">
                        @relations.FirstOrDefault(e=>e.ID == EmployeeDependent.RelationshipID).Name
                    </td> 
                    <td style="text-align:center">
                        @emps.FirstOrDefault(e=>e.ID == EmployeeDependent.EmployeeID).FirstName
                    </td>
                    <td style="text-align:center">
                        <a href="@Url.Action("AddEdit","EmployeeDependent",new{id=@EmployeeDependent.ID})" class="btn btn-warning btn-circle  btn-outline"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger btn-circle  btn-outline" onclick="javascript:Delete('@Url.Action("Delete","EmployeeDependent")',@EmployeeDependent.ID)"> <i class="fa fa-trash"></i></a>
                    </td>

                </tr>





            }
        </tbody>

    </table>
    <div class="form-group">
        <div class="row">
        </div>
    </div>
    <div class="form-group">
        <div class="row">
        </div>
    </div>
</div>