@model IEnumerable<DTO.TimeAttendance>
@{
    List<DTO.Employee> emps = ViewBag.emps;
    List<DTO.TimeAttendanceStatus> Status = ViewBag.TimeAttendanceStatus;
 }
<style>
    .header {
        background-color: #293846;
        color: #fff;
        padding: 20px 0;
        text-align: center;
    }

        .header h2 {
            margin: 0;
            font-size: 36px;
        }
</style>
<div class="container">
    <div class="header">
        <h2 style="">TimeAttendancees</h2>
    </div>

    <div style="">
        <a class="btn btn-success" href="@Url.Action("AddEdit","TimeAttendance",new{ID=0})">
            <span class="fa fa-plus">&nbsp;&nbsp;Add</span>
        </a>
    </div>
    <table class="table table-striped table-bordered table-hover dataTables-example">

        <thead>
            <tr>
                <th style="text-align:center">ID</th>
                <th style="text-align:center">Employee</th>
                <th style="text-align:center">TimeAttendanceStatus</th>
                <th style="text-align:center">Transaction Date</th>
                <th style="text-align:center">EntranceTime</th>
                <th style="text-align:center">LeaveTime</th>
                <th style="text-align:center">Justification</th>
                <th style="text-align:center" class="class=" col-sm-4 col-sm-offset-1 col-md-6 col-md-offset-1 col-lg-2 col-lg-offset-1"> <span>Actions</span></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var TimeAttendance in Model)
            {

                <tr id="tr_@TimeAttendance.ID" class="gradeX">
                    <td style="text-align:center">@Html.DisplayFor(e=>TimeAttendance.ID)</td>
                    <td style="text-align:center">
                        @emps.FirstOrDefault(e=>e.ID == TimeAttendance.EmployeeID).ForeignFirstName
                    </td>
                    <td style="text-align:center">
                        @Status.FirstOrDefault(e=>e.ID == TimeAttendance.TimeAttendanceStatusID).Name
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(e=>TimeAttendance.TransactionDate)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(e=>TimeAttendance.EntranceTime)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(e=>TimeAttendance.LeaveTime)
                    </td>
                     <td style="text-align:center">
                        @Html.DisplayFor(e=>TimeAttendance.Justification)
                    </td>
                    <td style="text-align:center">
                        <a href="@Url.Action("AddEdit","TimeAttendance",new{id=@TimeAttendance.ID})" class="btn btn-warning btn-circle  btn-outline"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger btn-circle  btn-outline" onclick="javascript:Delete('@Url.Action("Delete","TimeAttendance")',@TimeAttendance.ID)"> <i class="fa fa-trash"></i></a>
                    </td>

                </tr>
            }
        </tbody>

    </table>
    <div class="form-group">
        <div class="row">
        </div>
    </div>
    <div class="form-group">
        <div class="row">
        </div>
    </div>
</div>