        </div>

        <div style="width:50%;">
            <span class="col-sm-4 sm-offset-1"><label class="control-label">Account No :</label></span>
            <span class="col-sm-3">
                @Html.DisplayFor(e=>e.Email,new { @class="form-control"})
            </span>
        </div>

    </div>
</div>
<div class="form-group">
    <div class="row">
        <div style="width:50%;">
                <span class="col-sm-4 sm-offset-1"><label class="control-label">Transfer allowance :</label></span>
            <span class="col-sm-3">
                @Html.DisplayFor(e=>e.Grade.Name,new { @class="form-control"})
            </span>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div style="width:50%;">
                <span class="col-sm-4 sm-offset-1"><label class="control-label">Call allowance :</label></span>
            <span class="col-sm-3">
                @Html.DisplayFor(e=>e.Grade.Name,new { @class="form-control"})
            </span>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div style="width:50%;">
                <span class="col-sm-4 sm-offset-1"><label class="control-label">total salary :</label></span>
            <span class="col-sm-3">
                @Html.DisplayFor(e=>e.Grade.Name,new { @class="form-control"})
            </span>
        </div>

    </div>
</div>

</div>